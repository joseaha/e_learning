@model e_learning.Models.Course

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-white"> Agregar Curso</h1>

<div class="row justify-content-center ">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="name" class="control-label text-white"></label>
                <input asp-for="name" class="form-control " />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="description" class="control-label text-white"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="price" class="control-label text-white"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="VideoUrl" class="control-label text-white"></label>
                <input asp-for="VideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="imgUrl" class="control-label text-white"></label>
                <input asp-for="imgUrl" class="form-control" />
                <span asp-validation-for="imgUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <a class="btn btn-primary mx-2" asp-action="Index"><i class="bi bi-arrow-left-square mx-2"></i>Volver</a>
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
