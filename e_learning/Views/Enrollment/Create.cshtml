@model e_learning.Models.Enrollment
@using Microsoft.AspNetCore.Identity
@using e_learning.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create";
}

<div class="container text-center ">
    <h2><i class="bi bi-stack mx-2"></i>Inscribirse</h2>
    <hr class="border border-dark border-1 opacity-75">
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" value="@ViewBag.CourseId">
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" value="@UserManager.GetUserId(User)" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Nombre Curso</label>
                <input class="form-control" value="@ViewBag.CourseName" readonly />
            </div><div class="form-group">
                <label class="control-label">Precio</label>
                <input asp-for="UserId" class="form-control" value="$ @ViewBag.CoursePrice" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Inscribirse" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>


